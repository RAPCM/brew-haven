generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MenuType {
  DRINKS
  PASTRIES
  FOOD
  OTHER
}

model Menu {
  id          Int       @id @default(autoincrement())
  type        MenuType
  name        String
  price       Decimal    @db.Decimal(10, 2)
  description String?

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
